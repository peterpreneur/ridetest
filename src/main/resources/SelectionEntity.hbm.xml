<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.grandcircus.models.SelectionEntity" table="Selection" schema="RideShare">
        <id name="selectionId">
            <column name="SelectionID" sql-type="int(11)"/>
        </id>
        <property name="fromAddress">
            <column name="FromAddress" sql-type="text"/>
        </property>
        <property name="toAddress">
            <column name="ToAddress" sql-type="text"/>
        </property>
        <property name="selection">
            <column name="Selection" sql-type="text"/>
        </property>
        <property name="price">
            <column name="Price" sql-type="text"/>
        </property>
        <property name="timeDistance">
            <column name="TimeDistance" sql-type="int(11)"/>
        </property>
    </class>
</hibernate-mapping>